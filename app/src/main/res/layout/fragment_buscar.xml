<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.fragment.Buscar">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/menu_buscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/mainOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menubuscar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_buscarPaseador"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/btnMains"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_buscar" />
</androidx.constraintlayout.widget.ConstraintLayout>